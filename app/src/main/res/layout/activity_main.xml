<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etxNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="123dp"
        android:ems="10"
        android:hint="valor 1"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etxNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="valor 2"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxNum1" />

    <EditText
        android:id="@+id/etxRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Resultado"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgbtn" />

    <RadioGroup
        android:id="@+id/rgbtn"
        android:layout_width="218dp"
        android:layout_height="205dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxNum2">

        <RadioButton
            android:id="@+id/rbtSuma"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="Suma" />

        <RadioButton
            android:id="@+id/rbtResta"
            android:layout_width="103dp"
            android:layout_height="52dp"
            android:text="Resta" />

        <RadioButton
            android:id="@+id/rbtMult"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:text="Multiplicación" />

        <RadioButton
            android:id="@+id/rbtDiv"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:text="División" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>